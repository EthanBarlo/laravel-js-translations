{
    "name": "@ethanbarlo/laravel-js-translations",
    "version": "1.0.0",
    "description": "Use Laravel translations in JavaScript",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./vite-plugin": {
            "types": "./dist/vite-plugin.d.ts",
            "import": "./dist/vite-plugin.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/node": "^25.0.9",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0"
    },
    "peerDependencies": {
        "vite": "^4.0.0 || ^5.0.0 || ^6.0.0"
    },
    "peerDependenciesMeta": {
        "vite": {
            "optional": true
        }
    },
    "keywords": [
        "laravel",
        "translations",
        "i18n",
        "javascript",
        "vite"
    ],
    "author": "EthanBarlo",
    "license": "MIT"
}
